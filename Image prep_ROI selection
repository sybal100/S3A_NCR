#In this part a folder with *tif images will be imported, a local contrast will be applied and a region of interest will be segmented and the images will be safed
run("Clear Results");
dir1 = getDirectory("Choose Source Directory ");
list = getFileList(dir1);
for (i=0; i<list.length; i++) {
  if (endsWith(list[i], ".tif")) {
    open(dir1 + list[i]);
    title = getTitle();
	run("Normalize Local Contrast", "block_radius_x=40 block_radius_y=40 standard_deviations=3 center stretch");
	setTool("freehand");
	waitForUser("Wake up please","Choose the interesting sinusoidal area using the polygon tool. Exclude broken area");
	//wait for user to continue "Choose sinusoidal area using the polygon tool". Exclude non sinusoidal surface and also broken sinusoidal area.
	setBackgroundColor(0, 0, 0);
	run("Clear Outside");
	saveAs("TIFF", dir1+list[i]);
	close();
  }
}
